@page "/AddEmployee"
@using Assignment.Data
@using Assignment.Models
@inject EmployeeService employeeService
@inject NavigationManager NavigationManager


<h3>Add New Employee</h3>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Code" class="control-label"> Code</label>
                <input for="Code" class="form-control" @bind="@employee.Code" />
            </div>
            <div class="form-group">
                <label for="EmployeeName" class="control-label"> Name</label>
                <input for="EmployeeName" class="form-control" @bind="@employee.EmployeeName" />
            </div>
            @* <div class="form-group">
                <label for="Gender" class="control-label"> Company </label>
                <select @bind="@employee.CompanyID" class="form-control">
                    <option value="">-Select Company</option>
                   @foreach (var company in employee.Company.CompanyName)
                    {
                        <option value="@company">@company</option>
                    }
                </select>
            </div> *@
            <div class="form-group">
                <label for="PhoneNo" class="control-label"> Phone No</label>
                <input for="PhoneNo" class="form-control" @bind="@employee.PhoneNo" />
            </div>
            <div class="form-group">
                <label for="Address" class="control-label"> Address</label>
                <input for="Address" class="form-control" @bind="@employee.Address" />
            </div>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Save" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>